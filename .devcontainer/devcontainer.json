{
    "name": "Screenshot Generator Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "postCreateCommand": "sudo bash .devcontainer/scripts/post_create.sh",
    "postStartCommand": "sudo bash .devcontainer/scripts/post_start.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-azuretools.vscode-docker",
                "redhat.ansible",
                "mikestead.dotenv",
                "hediet.vscode-drawio",
                "EditorConfig.EditorConfig",
                "dbaeumer.vscode-eslint",
                "bierner.github-markdown-preview",
                "shd101wyy.markdown-preview-enhanced",
                "oderwat.indent-rainbow",
                "yzhang.markdown-all-in-one",
                "DavidAnson.vscode-markdownlint",
                "vscode-icons-team.vscode-icons",
                "redhat.vscode-yaml",
                "ICS.japanese-proofreading"
            ],
            "settings": {
                "ansible.ansible.path": "/usr/bin/ansible",
                "ansible.ansibleLint.path": "/usr/local/bin/ansible-lint",
                "ansible.validation.lint.enabled": true,
                "ansible.validation.lint.path": "/usr/local/bin/ansible-lint"
            }
        }
    },
    "remoteUser": "vscode"
}
